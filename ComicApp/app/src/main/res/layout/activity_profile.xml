<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="80dp"
        android:id="@+id/card"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kirito"
            android:id="@+id/imgProfile"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trịnh Viết Tuyến"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tennguoidung"
        android:layout_below="@+id/card"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tennguoidung"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/custom_edittext"
        android:id="@+id/eeeeeee">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="17sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyến đẹp trai"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvUsername"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="17sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyến đẹp trai"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvEmail"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="role"
            android:textSize="17sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyến đẹp trai"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvRole"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:id="@+id/btnDangXuat"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eeeeeee"
        android:layout_marginRight="20dp"/>


</RelativeLayout>