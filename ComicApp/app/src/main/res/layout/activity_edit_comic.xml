<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddComicActivity"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/camdo"
            android:text="Cập nhật truyện"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTentruyen"
            android:textSize="20sp"
            android:hint="Nhập tên truyện"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etMoTaNgan"
            android:textSize="20sp"
            android:hint="Nhập mô tả ngắn"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTenTacGia"
            android:textSize="20sp"
            android:hint="Nhập tên tác giả"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNamXuatBan"
            android:textSize="20sp"
            android:hint="Nhập năm xuất bản"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etAnhBia"
            android:textSize="20sp"
            android:hint="Nhập link ảnh bìa"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgAnhbia"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center_horizontal"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etAnhNoiDung"
            android:textSize="20sp"
            android:hint="Nhập link ảnh nội dung"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/rcvanh"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="5dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnThemAnh"
                android:text="Thêm ảnh"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/camdo"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnThemTruyen"
                android:text="Sửa truyện"
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/camdo"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>